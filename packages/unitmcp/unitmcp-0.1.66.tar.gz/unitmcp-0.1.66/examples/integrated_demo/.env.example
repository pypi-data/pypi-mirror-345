# Integrated Demo Environment Configuration
# Copy this file to .env and customize with your settings

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=INFO

# Hardware configuration
SIMULATION=1  # Set to 0 for real hardware
GPIO_PINS=17,18,27,22,23,24
LED_PINS=17,22,27
BUTTON_PINS=23,24
SENSOR_PINS=4,5,6

# SSH configuration for remote hardware
SSH_ENABLE=true
SSH_PORT=22
SSH_USERNAME=pi
SSH_PASSWORD=raspberry
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_KEY_PASSPHRASE=
SSH_KNOWN_HOSTS_PATH=~/.ssh/known_hosts
SSH_AUTO_ADD_HOST=true
SSH_ALLOW_AGENT=true
SSH_GENERATE_KEY=true
SSH_KEY_TYPE=rsa  # Options: rsa, dsa, ecdsa, ed25519
SSH_KEY_BITS=4096
SSH_KEY_COMMENT="UnitMCP Integrated Demo"

# SSL/TLS configuration
ENABLE_SSL=false
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_GENERATE_CERT=true
SSL_CERT_COUNTRY=PL
SSL_CERT_STATE=Mazowieckie
SSL_CERT_LOCALITY=Warsaw
SSL_CERT_ORGANIZATION=UnitMCP
SSL_CERT_COMMON_NAME=unitmcp.local
SSL_CERT_EXPIRY_DAYS=365

# Audio configuration
AUDIO_DEVICE=default
SAMPLE_RATE=44100
CHANNELS=1

# TTS configuration
TTS_ENGINE=pyttsx3
VOICE_RATE=150

# LLM configuration
LLM_PROVIDER=ollama
LLM_MODEL=llama2
OLLAMA_BASE_URL=http://localhost:11434

# Demo settings
DEMO_TIMEOUT=300
ENABLE_WEB_INTERFACE=true
WEB_PORT=8000
DEMO_MODE=full  # Options: full, minimal, hardware-only, software-only
