<odoo>
    <record id="view_order_form_inherit_sale_stock_qty" model="ir.ui.view">
        <field name="name">sale.order.line.tree.predicted.expiration.date</field>
        <field name="model">sale.order</field>
        <field
            name="inherit_id"
            ref="sale_stock.view_order_form_inherit_sale_stock_qty"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//page/field[@name='order_line']/form//field[@name='company_id']"
                position="after"
            >
                <!-- below fields are used in the widget qty_at_date_widget -->
                <field name="predicted_first_expiration_date" invisible="1" />
            </xpath>
            <xpath
                expr="//page/field[@name='order_line']/tree//field[@name='company_id']"
                position="after"
            >
                <!-- below fields are used in the widget qty_at_date_widget -->
                <field name="predicted_first_expiration_date" invisible="1" />
            </xpath>
            <xpath
                expr="//page/field[@name='order_line']/kanban//field[@name='company_id']"
                position="after"
            >
                <!-- below fields are used in the widget qty_at_date_widget -->
                <field name="predicted_first_expiration_date" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
