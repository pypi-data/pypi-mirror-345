# UnitMCP Development Environment Configuration
# Copy this file to .env for development use

# Server configuration
PYTHONUNBUFFERED=1
HOST=127.0.0.1
SERVER_NAME=UnitMCP Development Server
OLLAMA_HOST=http://localhost:11434
OLLAMA_PORT=11434
OLLAMA_MODEL=llama2

# Raspberry Pi connection settings
RPI_HOST=127.0.0.1
RPI_USERNAME=pi
RPI_PORT=8888
RPI_PASSWORD=

# GPIO configuration
DEFAULT_LED_PIN=18
DEFAULT_BUTTON_PIN=23
GPIO_SIMULATION=true

# Audio configuration  
DEFAULT_AUDIO_DIR=/tmp/sounds
DEFAULT_VOLUME=70
TEXT_TO_SPEECH_ENGINE=pyttsx3

# LCD Display configuration
LCD_ENABLED=true
LCD_ROWS=2
LCD_COLS=16
LCD_I2C_ADDR=0x27

# Logging configuration
LOG_LEVEL=DEBUG
LOG_FILE=unitmcp_dev.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Application settings
AUTOMATION_DURATION=60
SIMULATION_MODE=true
DEBUG_MODE=true

# Security settings
API_KEY=dev_key
API_SECRET=dev_secret
SSL_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=
