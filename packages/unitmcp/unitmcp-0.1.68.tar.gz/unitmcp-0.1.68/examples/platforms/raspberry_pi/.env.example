# Server configuration
RPI_HOST=192.168.1.100
RPI_PORT=8080
LOG_LEVEL=INFO

# GPIO configuration
GPIO_MODE=BCM
LED_PIN=17
BUTTON_PIN=27
SENSOR_PIN=4
PWM_PIN=18
PWM_FREQ=100

# I2C configuration
I2C_BUS=1
I2C_ADDRESS=0x48

# SPI configuration
SPI_BUS=0
SPI_DEVICE=0
SPI_SPEED=1000000

# Hardware settings
SIMULATION=0
ENABLE_HARDWARE_PWM=true

# SSH configuration
SSH_ENABLE=true
SSH_PORT=22
SSH_USERNAME=pi
SSH_PASSWORD=raspberry
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_KEY_PASSPHRASE=
SSH_KNOWN_HOSTS_PATH=~/.ssh/known_hosts
SSH_AUTO_ADD_HOST=true
SSH_ALLOW_AGENT=true
SSH_GENERATE_KEY=true
SSH_KEY_TYPE=rsa  # Options: rsa, dsa, ecdsa, ed25519
SSH_KEY_BITS=4096
SSH_KEY_COMMENT="UnitMCP Raspberry Pi Example"

# SSL/TLS configuration
ENABLE_SSL=false
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_GENERATE_CERT=true
SSL_CERT_COUNTRY=PL
SSL_CERT_STATE=Mazowieckie
SSL_CERT_LOCALITY=Warsaw
SSL_CERT_ORGANIZATION=UnitMCP
SSL_CERT_COMMON_NAME=unitmcp.local
SSL_CERT_EXPIRY_DAYS=365
