#!/usr/bin/env python3
"""
UnitMCP Command Line Interface

This script provides a command-line interface for UnitMCP,
including natural language processing using Claude 3.7.
"""

import asyncio
import sys
import os

# Add the project root to the Python path
sys.path.insert(0, os.path.abspath(os.path.join(os.path.dirname(__file__), '../..')))

from unitmcp.cli.main import main

if __name__ == "__main__":
    sys.exit(asyncio.run(main()))
