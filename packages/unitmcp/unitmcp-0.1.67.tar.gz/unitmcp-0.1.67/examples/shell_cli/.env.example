# Server configuration
SERVER_HOST=192.168.1.2
SERVER_PORT=8000
LOG_LEVEL=INFO
COMM=connect 192.168.1.2 22 --ssh --username pi --password pi
COMM2=connect 192.168.1.2 22 --ssh --username pi --key-path /home/tom/.ssh/id_ed25519 --password raspberry

# Hardware configuration
SIMULATION=1
GPIO_PINS=17,18,27
LED_PINS=18

# Shell configuration
PROMPT_COLOR=green
HISTORY_FILE=~/.shell_history
MAX_HISTORY=1000
TIMEOUT=30

# SSH connection configuration
RPI_USERNAME=pi
RPI_PASSWORD=raspberry
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_KEY_PASSPHRASE=

# SSL/TLS configuration
ENABLE_SSL=false
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_GENERATE_CERT=true
SSL_CERT_COUNTRY=PL
SSL_CERT_STATE=Mazowieckie
SSL_CERT_LOCALITY=Warsaw
SSL_CERT_ORGANIZATION=UnitMCP
SSL_CERT_COMMON_NAME=unitmcp.local
SSL_CERT_EXPIRY_DAYS=365
