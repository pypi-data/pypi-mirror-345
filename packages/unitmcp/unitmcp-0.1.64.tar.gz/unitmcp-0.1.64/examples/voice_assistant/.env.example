# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=INFO

# Voice recognition configuration
SPEECH_RECOGNITION_ENGINE=google  # Options: google, sphinx, azure, whisper
LANGUAGE=en-US
ENERGY_THRESHOLD=300
PAUSE_THRESHOLD=0.8
DYNAMIC_ENERGY_THRESHOLD=true

# TTS configuration
TTS_ENGINE=pyttsx3  # Options: pyttsx3, gtts, espeak
VOICE_RATE=150
VOICE_VOLUME=1.0

# Audio device configuration
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default

# API Keys (if using cloud services)
GOOGLE_API_KEY=your_google_api_key_here
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_REGION=eastus

# LLM configuration (for AI responses)
LLM_PROVIDER=ollama
LLM_MODEL=llama2
TEMPERATURE=0.7
