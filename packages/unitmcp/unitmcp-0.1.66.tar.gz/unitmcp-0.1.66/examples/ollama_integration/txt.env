# Ollama Integration Configuration
# Rename this file to .env to use these settings

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# MCP client configuration
RPI_HOST=localhost
RPI_PORT=8080
SIMULATION_MODE=true

# Ollama configuration
OLLAMA_MODEL=llama2
OLLAMA_MODE=interactive
LOG_LEVEL=INFO

# System prompt (uncomment and modify to customize)
# OLLAMA_SYSTEM_PROMPT="You are a hardware control agent that can interact with physical devices through MCP..."

# Demo configuration
DEMO_DELAY=2.0
# Comma-separated list of demo scenarios
DEMO_SCENARIOS="Setup pin 17 as output for LED control,Turn on the LED connected to pin 17,Blink the LED 5 times"

# Voice control configuration
VOICE_TIMEOUT=5.0
