# Runner configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=INFO
VERBOSE=false

# Runner modes
SERVER_ONLY=false
CLIENT_ONLY=false
DEMO_NAME=default

# Configuration paths
SERVER_CONFIG_PATH=./configs/server.yaml
CLIENT_CONFIG_PATH=./configs/client.yaml
SERVER_SCRIPT_PATH=./server.py
CLIENT_SCRIPT_PATH=./client.py

# Process management
ENABLE_PROCESS_MONITORING=true
AUTO_RESTART=true
MAX_RESTART_ATTEMPTS=3
RESTART_DELAY=5
GRACEFUL_SHUTDOWN_TIMEOUT=10

# Hardware configuration
SIMULATION=1
GPIO_PINS=17,18,27
LED_PINS=17,22
