{% extends "base.html" %}

{% block title %}Register - Flaskion{% endblock %}

{% block content %}
    <div class="auth-container">
        <h2>Register</h2>

        {% raw %}
        {% with messages = get_flashed_messages() %}
          {% if messages %}
            <ul>
              {% for message in messages %}
                <li>{{ message }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        {% endwith %}
        {% endraw %}

        <form method="POST">
            <label>Email:</label>
            <input type="email" name="email" required>

            <label>Password:</label>
            <input type="password" name="password" required>

            <button type="submit">Register</button>
        </form>

        {% raw %}
        <div class="link">
            <p>Already have an account? <a href="{{ url_for('web_routes.login') }}">Login here</a></p>
        </div>
        {% endraw %}
    </div>
{% endblock %}