# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=INFO

# Voice recognition configuration
SPEECH_RECOGNITION_ENGINE=google  # Options: google, whisper, vosk
LANGUAGE=en-US
ENERGY_THRESHOLD=300
PAUSE_THRESHOLD=0.8
DYNAMIC_ENERGY_THRESHOLD=true

# TTS configuration
TTS_ENGINE=pyttsx3  # Options: pyttsx3, gtts, espeak
VOICE_RATE=150
VOICE_VOLUME=1.0

# LLM configuration
LLM_PROVIDER=ollama
LLM_MODEL=llama2
OLLAMA_BASE_URL=http://localhost:11434
TEMPERATURE=0.7
MAX_TOKENS=1024

# Audio device configuration
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default
SAMPLE_RATE=16000
CHANNELS=1

# Hardware integration
SIMULATION=1
ENABLE_LED_INDICATOR=false
LED_PIN=17

# Assistant settings
WAKE_WORD=hey assistant
ENABLE_CONTINUOUS_LISTENING=true
CONVERSATION_TIMEOUT=60
ENABLE_SKILLS=true
SKILLS_DIR=./skills
