{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "commitMessagePrefix": "⬆️ ",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchDepTypes": ["requires-python"],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
