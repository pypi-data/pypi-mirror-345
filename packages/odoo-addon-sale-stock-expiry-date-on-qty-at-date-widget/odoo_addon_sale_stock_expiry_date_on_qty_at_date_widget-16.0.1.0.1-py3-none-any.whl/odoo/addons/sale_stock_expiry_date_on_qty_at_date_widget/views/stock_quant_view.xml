<odoo>
    <record id="view_stock_quant_tree_expiry_dates" model="ir.ui.view">
        <field name="name">stock.quant.tree.expiry.dates</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree" />
        <field name="mode">primary</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">0</attribute>
                <attribute name="edit">0</attribute>
                <attribute name="delete">0</attribute>
                <attribute name="js_class" />
            </xpath>
        </field>
    </record>

    <record id="view_stock_quant_kanban_expiry_dates" model="ir.ui.view">
        <field name="name">stock.quant.kanban.expiry.dates</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="owner_id" />
                <field name="package_id" />
                <field name="lot_id" />
                <field name="use_expiration_date" />
                <field name="removal_date" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_title mb0">
                                <field name="product_id" />
                                <div class="float-end small align-self-center">
                                    <field
                                        name="available_quantity"
                                        class="fw-bolder"
                                    />
                                    <field
                                        name="product_uom_id"
                                        groups="uom.group_uom"
                                        class="mx-1"
                                    />
                                </div>
                            </div>

                            <div
                                class="o_kanban_record_subtitle mt-auto d-flex justify-content-between align-items-end"
                            >
                                <ul class="small mb-auto">
                                    <li
                                        groups="stock.group_tracking_owner"
                                        t-if="record.owner_id.value"
                                    >
                                        <span
                                            t-if="record.owner_id.value"
                                            class="mr4"
                                        >Owner:</span>
                                        <field
                                            name="owner_id"
                                            groups="stock.group_tracking_owner"
                                            class="fw-bolder"
                                        />
                                    </li>
                                    <li
                                        groups="stock.group_production_lot"
                                        t-if="record.lot_id.value or record.removal_date.value"
                                    >
                                        <span
                                            t-if="record.lot_id.value"
                                            class="mr4"
                                        >Lot</span>
                                        <field name="lot_id" />
                                        <t t-if="record.removal_date.value">
                                            <span class="ml4">(</span>
                                            <field
                                                name="removal_date"
                                                widget="date"
                                                help="Removal Date"
                                            />
                                            <span>)</span>
                                        </t>
                                    </li>
                                    <li
                                        groups="stock.group_tracking_lot"
                                        t-if="record.package_id.value"
                                    >
                                        <span
                                            t-if="record.package_id.value"
                                            class="mr4"
                                        >Package</span>
                                        <field name="package_id" />
                                    </li>
                                </ul>
                            </div>
                            <div
                                class="o_kanban_record_bottom mt-auto d-flex justify-content-between align-items-end"
                            >
                                <field name="location_id" />
                                <field
                                    name='company_id'
                                    groups="base.group_multi_company"
                                />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_open_quants_expiry_dates" model="ir.actions.act_window">
        <field name="name">Quants</field>
        <field name="res_model">stock.quant</field>
        <field name="view_id" ref="view_stock_quant_tree_expiry_dates" />
        <field name="view_mode">tree,kanban,form</field>
    </record>
</odoo>
