# UnitMCP Environment Configuration
# Copy this file to .env and customize with your settings

# Raspberry Pi connection settings
RPI_HOST=192.168.1.2
RPI_USERNAME=pi
RPI_PASSWORD=raspberry
RPI_PORT=8888
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_KEY_PASSPHRASE=
SSH_KNOWN_HOSTS_PATH=~/.ssh/known_hosts
SSH_AUTO_ADD_HOST=true

# GPIO configuration
DEFAULT_LED_PIN=18
DEFAULT_BUTTON_PIN=23

# Audio configuration  
DEFAULT_AUDIO_DIR=/home/pi/sounds
DEFAULT_VOLUME=80

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=automation.log

# Application settings
AUTOMATION_DURATION=60
SIMULATION_MODE=false

# SSL/TLS configuration
ENABLE_SSL=false
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_GENERATE_CERT=true
SSL_CERT_COUNTRY=PL
SSL_CERT_STATE=Mazowieckie
SSL_CERT_LOCALITY=Warsaw
SSL_CERT_ORGANIZATION=UnitMCP
SSL_CERT_COMMON_NAME=unitmcp.local
SSL_CERT_EXPIRY_DAYS=365
