# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8443  # Using secure port
LOG_LEVEL=INFO

# Security configuration
ENABLE_SSL=true
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_GENERATE_CERT=true
SSL_CERT_COUNTRY=PL
SSL_CERT_STATE=Mazowieckie
SSL_CERT_LOCALITY=Warsaw
SSL_CERT_ORGANIZATION=UnitMCP
SSL_CERT_COMMON_NAME=unitmcp.local
SSL_CERT_EXPIRY_DAYS=365
ENABLE_AUTH=true
AUTH_METHOD=basic  # Options: basic, token, oauth

# Authentication credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
TOKEN_EXPIRY=3600
SECRET_KEY=change_this_secret_key

# SSH configuration
SSH_ENABLE=true
SSH_PORT=22
SSH_USERNAME=pi
SSH_PASSWORD=raspberry
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_KEY_PASSPHRASE=
SSH_KNOWN_HOSTS_PATH=~/.ssh/known_hosts
SSH_AUTO_ADD_HOST=true
SSH_ALLOW_AGENT=true
SSH_GENERATE_KEY=true
SSH_KEY_TYPE=rsa  # Options: rsa, dsa, ecdsa, ed25519
SSH_KEY_BITS=4096
SSH_KEY_COMMENT="UnitMCP Security Example"

# Access control
ALLOWED_IPS=127.0.0.1,192.168.1.0/24
RATE_LIMIT=100
RATE_LIMIT_PERIOD=60

# Hardware configuration
SIMULATION=1
RESTRICTED_PINS=22,27  # Pins that require elevated permissions
