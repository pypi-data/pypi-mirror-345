# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=INFO

# AI model configuration
MODEL_PROVIDER=ollama  # Options: ollama, openai, huggingface, local
MODEL_NAME=llama2
MODEL_PATH=./models/llama2
TEMPERATURE=0.7
MAX_TOKENS=1024
CONTEXT_LENGTH=4096

# API Keys (replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Hardware integration
SIMULATION=1
ENABLE_CAMERA=false
CAMERA_DEVICE=0
ENABLE_MICROPHONE=false
MICROPHONE_DEVICE=default

# AI application settings
RESPONSE_FORMAT=text  # Options: text, json, markdown
STREAM_RESPONSE=true
ENABLE_MEMORY=true
MEMORY_SIZE=10
ENABLE_TOOLS=true
