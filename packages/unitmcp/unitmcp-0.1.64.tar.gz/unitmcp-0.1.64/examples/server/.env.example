# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=INFO

# Performance settings
MAX_CONNECTIONS=100
WORKER_THREADS=4
CONNECTION_TIMEOUT=30
KEEP_ALIVE=true

# API configuration
ENABLE_REST_API=true
ENABLE_WEBSOCKET=true
API_VERSION=v1
API_PREFIX=/api

# Database configuration
DB_TYPE=sqlite  # Options: sqlite, mysql, postgresql
DB_PATH=./data/server.db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=unitmcp
DB_USER=username
DB_PASSWORD=password

# Security settings
ENABLE_SSL=false
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_GENERATE_CERT=true
SSL_CERT_COUNTRY=PL
SSL_CERT_STATE=Mazowieckie
SSL_CERT_LOCALITY=Warsaw
SSL_CERT_ORGANIZATION=UnitMCP
SSL_CERT_COMMON_NAME=unitmcp.local
SSL_CERT_EXPIRY_DAYS=365

# SSH configuration
SSH_ENABLE=false
SSH_PORT=22
SSH_USERNAME=pi
SSH_PASSWORD=raspberry
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_KEY_PASSPHRASE=
SSH_KNOWN_HOSTS_PATH=~/.ssh/known_hosts
SSH_AUTO_ADD_HOST=true
SSH_ALLOW_AGENT=true
