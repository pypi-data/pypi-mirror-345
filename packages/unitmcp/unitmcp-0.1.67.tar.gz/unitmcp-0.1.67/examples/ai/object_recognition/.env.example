# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=INFO

# Camera configuration
CAMERA_DEVICE=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
ENABLE_CAMERA_PREVIEW=true

# Object recognition model
MODEL_TYPE=yolo  # Options: yolo, ssd, faster_rcnn
MODEL_VERSION=v8
MODEL_SIZE=small  # Options: nano, small, medium, large
MODEL_PATH=./models/yolov8s.pt
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.45

# Hardware integration
SIMULATION=1
ENABLE_GPIO=false
LED_PIN=17  # LED to indicate detection
BUZZER_PIN=27  # Buzzer for alerts

# Application settings
SAVE_DETECTIONS=true
DETECTION_OUTPUT_DIR=./detections
MAX_SAVED_IMAGES=100
ENABLE_STREAMING=false
STREAM_PORT=8081
