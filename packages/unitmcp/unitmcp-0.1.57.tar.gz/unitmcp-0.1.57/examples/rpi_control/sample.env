# UnitMCP Environment Configuration
# This is a sample .env file - copy to .env for local use

# Raspberry Pi connection settings
RPI_HOST=127.0.0.1
RPI_USERNAME=pi
RPI_PORT=8888

# GPIO configuration
DEFAULT_LED_PIN=18
DEFAULT_BUTTON_PIN=23

# Audio configuration  
DEFAULT_AUDIO_DIR=/tmp/sounds
DEFAULT_VOLUME=70

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=automation.log

# Application settings
AUTOMATION_DURATION=30
SIMULATION_MODE=true
