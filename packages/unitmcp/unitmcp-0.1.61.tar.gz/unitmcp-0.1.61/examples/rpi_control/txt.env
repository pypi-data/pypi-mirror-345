# UnitMCP Automation Configuration
# Rename this file to .env to use these settings

# Server configuration
RPI_HOST=127.0.0.1
RPI_PORT=8888
SIMULATION_MODE=true

# Automation configuration
CONFIG_FILE=configs/yaml/automation/default.yaml
DEMO_DURATION=30.0
LOG_LEVEL=INFO
LOG_FILE=automation.log

# Hardware configuration
LED_PIN=18
BUTTON_PIN=17

# Time trigger configuration
TIME_TRIGGER_INTERVAL=10.0
TIME_TRIGGER_MAX_COUNT=3

# Audio configuration
AUDIO_FREQUENCY=440
AUDIO_DURATION=0.5
TTS_MESSAGE="Hello, UnitMCP automation system is running!"

# Sequence configuration
SEQUENCE_DELAY=2.0
