# Example .env file for rpi_control usage
# Used by both Python and shell scripts

# Remote Raspberry Pi connection
RPI_USERNAME=pi
RPI_HOST=raspberrypi

# Example service configuration
EXAMPLE="full_demo.py"  # Change this to any example you want to run as a service
EXAMPLES_DIR="/home/pi/examples"
PORT=8081  # Change if your example uses a different port
LOGFILE="example_service.log"

# Used by install_remote.sh
REMOTE=pi@raspberrypi
REMOTE_PATH=~/pi

# Used by start.sh/client.sh
SCRIPT_DIR=./rpi_control

# Default audio test files
DEFAULT_MP3=test.mp3
DEFAULT_WAV=test.wav

# Environment variables used in docker-compose.yml
PYTHONUNBUFFERED=1
HOST=0.0.0.0
PORT=8080
SERVER_NAME=Raspberry Pi Simulator
RPI_HOST=rpi-simulator
RPI_PORT=8080
OLLAMA_HOST=llm-model
OLLAMA_PORT=11434
OLLAMA_MODEL=llama2
