# Installation configuration
INSTALL_MODE=user  # Options: user, system, development
PYTHON_VERSION=3.9
VIRTUAL_ENV_PATH=./.venv
INSTALL_DEPENDENCIES=true
INSTALL_OPTIONAL_DEPS=false

# Package configuration
PACKAGE_SOURCE=pypi  # Options: pypi, local, git
GIT_REPO=https://github.com/username/unitmcp.git
GIT_BRANCH=main
PYPI_INDEX_URL=https://pypi.org/simple

# Hardware support
ENABLE_RPI_SUPPORT=true
ENABLE_AUDIO_SUPPORT=true
ENABLE_GPIO_SUPPORT=true

# Post-installation
RUN_TESTS_AFTER_INSTALL=false
CREATE_SHORTCUTS=true
GENERATE_CONFIG=true
DEFAULT_CONFIG_PATH=~/.unitmcp
