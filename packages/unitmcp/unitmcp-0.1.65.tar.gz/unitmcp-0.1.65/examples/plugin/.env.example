# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=INFO

# Plugin system configuration
PLUGIN_DIR=./plugins
ENABLE_AUTO_DISCOVERY=true
PLUGIN_CACHE_TTL=3600
ENABLE_HOT_RELOAD=true

# Plugin security
VERIFY_SIGNATURES=false
ALLOWED_PLUGIN_SOURCES=local,verified
SANDBOX_PLUGINS=true

# Hardware configuration
SIMULATION=1
GPIO_PINS=17,18,27
LED_PINS=17,22

# Plugin-specific settings
DEFAULT_PLUGIN_TIMEOUT=30
MAX_PLUGIN_MEMORY=256  # In MB
